---
export type BannerProps = {
  text: string
  navbarNoBg?: boolean
  style?: Record<string, string>
  textColor?: string
  subtitle?: string
}

const { text, style, textColor, navbarNoBg, subtitle } = Astro.props as BannerProps
---

<section
  style={style}
  class:list={[
    'relative w-full h-screen bg-cover bg-center md:bg-fixed overflow-hidden',
    { '-mt-16': !navbarNoBg }
  ]}
>
  <!-- Overlay -->
  <div class='absolute inset-0 bg-gradient-to-t from-ink-900/70 via-ink-900/30 to-transparent' />
  
  <div class='relative h-full container-wide flex flex-col justify-end pb-20 md:pb-24'>
    <div class='max-w-2xl'>
      <h1
        class:list={[
          'font-display font-light drop-shadow-lg',
          textColor || 'text-white'
        ]}
      >
        {text}
      </h1>
      {subtitle && (
        <p class='mt-4 text-lg md:text-xl text-sand-200 font-light'>
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>
