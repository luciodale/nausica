---
import { getImage } from '@astrojs/image'
import slide1 from '../assets/images/slide1.jpeg'
import slide2 from '../assets/images/slide2.jpeg'
import BannerSlider, { Carousel } from '../components/BannerSlider.astro'
import { ButtonWave } from '../components/ButtonWave'
import { Contact } from '../components/Contact'
import Layout from '../layouts/Layout.astro'
import { Fb, Ig } from '../components/Logos'

const siteMetadata = await Astro.glob('../data/metadata.json')

const carouselImages: Carousel[] = [
  {
    src: slide1.src,
    text: "A chi preferisce il clima del paradiso, puttosto che la compagnia dell'inferno.",
    alt: 'slide 1'
  },
  {
    src: slide2.src,
    text: 'A chi non si preoccupa del traguardo, ma pensa piuttosto a godersi il viaggio.',
    alt: 'slide 2'
  }
]

const homepageBannerPicture = await getImage({
  src: import('../assets/images/homepage-banner.jpg'),
  width: 1700,
  quality: 90,
  alt: 'homepage banner'
}).then((img) => img.src)
---

<Layout title='Nausica Beach' navbar>
  <main class='relative'>
    <div
      class='fixed top-20 left-0 z-10 flex bg-white bg-opacity-40 flex-col p-2 rounded-r-lg'
    >
      <a href='https://www.facebook.com/lidonausicabeach' target='_blank'>
        <Fb
          className='transition-all fill-white stroke-white w-10 hover:fill-blue-500 hover:stroke-blue-500'
        />
      </a>
      <a href='https://www.instagram.com/nausica_beach/' target='_blank'>
        <Ig
          className='transition-all fill-white stroke-white w-10 hover:fill-blue-500 hover:stroke-blue-500'
        />
      </a>
    </div>
    <BannerSlider carousel={carouselImages} />

    <div class='w-full py-16 bg-blue-600'>
      <div
        class='h-full flex flex-col md:flex-row gap-8 justify-center items-center'
      >
        <div
          class='px-4 sm:px-0 text-4xl text-center font-extralight text-white'
        >
          Welcome to Nausica Beach
        </div>
        <div class='px-4'>
          <ButtonWave client:only label='Contattaci' href='#contact-us' />
        </div>
      </div>
    </div>
    <Contact client:only />
  </main>
</Layout>
